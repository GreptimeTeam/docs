.VPSidebarGroup {
  .title-text {
    padding: 8px 0;
    font-size: 16px;
    font-weight: bold;
    line-height: 24px;
    font-family: Roboto-Bold, Roboto;
  }

  .items .VPLink {
    padding: 8px 0;
    margin: 0;

    .link-text {
      font-size: 16px;
      line-height: 24px;
    }
  }
}

.group {
  margin: 15px 0 10px;

  .no-title .items {
    .link {
      color: var(--color-sidebar-first-text);

      .link-text {
        font-family: Roboto-Bold, Roboto;
        font-weight: bold;
      }
    }
  }

  .title {
    .title-text {
      font-size: 16px;
      font-weight: bold;
      line-height: 24px;
    }
  }

  .items .VPLink .link-text {
    font-size: 16px;
    line-height: 24px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
  }

  .items .link {
    color: var(--color-p-text);
  }

  .items .link.active {
    color: var(--color-primary);
  }
}
