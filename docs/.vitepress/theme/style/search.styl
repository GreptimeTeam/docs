.VPLocalSearchBox 
  .shell
    padding 24px 24px 0 !important
    gap 0 !important
    .search-bar
      margin-bottom 24px
      border 2px solid var(--vp-c-brand)
    .search-keyboard-shortcuts
      width calc(100% + 48px)
      background var(--color-gray-light)
      padding 15px 24px
      align-self center
      border-radius 0 0 6px 6px
    .results
      .titles mark
        background var(--vp-c-brand-light-1)
        color var(--color-primary-red-8-5)
        padding 0 4px
        font-weight normal
      .excerpt-wrapper mark
        background var(--vp-c-brand-light-1)
        color var(--color-primary-red-8-5)
        padding 0 4px
    .result.selected .titles
      color var(--color-dark-primary) !important
.VPNavBarSearch
  justify-content end
  margin-right 30px
  #local-search .DocSearch-Button
    height 38px
    background var(--color-primary-light-3)
    &:hover
      border-color transparent
    .DocSearch-Button-Container
      margin-right 80px
      .DocSearch-Search-Icon,.DocSearch-Button-Placeholder
        color var(--color-title-text)
    .DocSearch-Button-Key:first-child:after, .DocSearch-Button-Key + .DocSearch-Button-Key
      color var(--color-title-text)
    .DocSearch-Button-Key + .DocSearch-Button-Key
      border-left none
      border-right 1px solid var(--color-title-text)
    .DocSearch-Button-Key
      border 1px solid var(--color-title-text)
      border-right none