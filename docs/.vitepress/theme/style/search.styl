.VPLocalSearchBox 
  .shell
    padding 24px 24px 0 !important
    gap 0 !important
    .search-bar
      margin-bottom 24px
      border 2px solid var(--vp-c-brand)
    .search-keyboard-shortcuts
      width calc(100% + 48px)
      background var(--color-gray-light)
      padding 15px 24px
      align-self center
      border-radius 0 0 6px 6px
    .results
      .titles mark
        background var(--vp-c-brand-light-1)
        color var(--color-red-1-85)
        padding 0 4px
        font-weight normal
      .excerpt-wrapper mark
        background var(--vp-c-brand-light-1)
        color var(--color-red-1-85)
        padding 0 4px
    .result.selected .titles
      color var(--color-dark-primary) !important
.VPNavBarSearch
  margin 0 12px
  #local-search .DocSearch-Button
    height 38px
    border-radius var(--border-radius-s)
    background var(--color-light-primary-2)
    &:hover
      border-color transparent
    .DocSearch-Button-Container
      .DocSearch-Search-Icon,.DocSearch-Button-Placeholder
        color var(--color-title-text)
      .DocSearch-Button-Placeholder
        padding-right 24px
    .DocSearch-Button-Key:first-child:after, .DocSearch-Button-Key + .DocSearch-Button-Key
      color var(--color-title-text)
    .DocSearch-Button-Key + .DocSearch-Button-Key
      border-left none
      border-right 1px solid var(--color-title-text)
    .DocSearch-Button-Key
      border 1px solid var(--color-title-text)
      border-right none

@media(max-width 767px)
  .VPNavBarSearch #local-search .DocSearch-Button
    background transparent
    .DocSearch-Button-Container 
      width 22px
      height 22px
      display flex
      justify-content center
  #local-search 
    // TODO
    &:hover .DocSearch-Button .DocSearch-Button-Container 
      background var(--color-light-primary-2)
      border-radius var(--border-raduis-s)
@media(min-width 960px)
  .VPNavBarSearch
    margin 0 12px 0 0
    padding-left 0
  .VPNavBar:not(.has-sidebar)
    .VPNavBarSearch
      margin-left 20px
  .VPNav .VPNavBar:not(.has-sidebar):not(.top)
    background var(--color-dark-2)
    .content-body
      background var(--color-dark-2)